<odoo>
  <data>

      <!-- STATUT TYPE-->
      <record id="view_solidserv_server_status_list" model="ir.ui.view">
            <field name="name">solidserv.server.status.list</field>
            <field name="model">solidserv.server.status</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

      <!--STATUT TYPE-->
        <record id="action_solidserv_server_status" model="ir.actions.act_window">
            <field name="name">Configuration des statuts de serveurs</field>
            <field name="res_model">solidserv.server.status</field>
            <field name="view_mode">list</field>
            <field name="path">solidserv-status</field>
        </record>

      <!-- VUE OS-->
      <record id="view_solidserv_server_os_list" model="ir.ui.view">
            <field name="name">solidserv.server.os.list</field>
            <field name="model">solidserv.server.os</field>
          <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="version"/>
                    <field name="os_type"/>
                </list>
            </field>
        </record>

      <!--ACTION OS-->
        <record id="action_solidserv_server_os" model="ir.actions.act_window">
            <field name="name">Configuration des OS des serveurs</field>
            <field name="res_model">solidserv.server.os</field>
            <field name="view_mode">list</field>
            <field name="path">solidserv-os</field>
        </record>

      <!-- VUE LIEU-->
      <record id="view_solidserv_server_location_list" model="ir.ui.view">
            <field name="name">solidserv.server.location.list</field>
            <field name="model">solidserv.server.location</field>
          <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="country"/>
                </list>
            </field>
        </record>

      <!--ACTION LIEU-->
        <record id="action_solidserv_server_location" model="ir.actions.act_window">
            <field name="name">Configuration des lieux des datacenters</field>
            <field name="res_model">solidserv.server.location</field>
            <field name="view_mode">list</field>
            <field name="path">solidserv-lieux</field>
        </record>


      <!-- VUE RECURENCE-->
      <record id="view_solidserv_server_recurrence_list" model="ir.ui.view">
            <field name="name">solidserv.server.recurrence.list</field>
            <field name="model">solidserv.server.recurrence</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                </list>
            </field>
        </record>

      <!--ACTION RECURENCE-->
        <record id="action_solidserv_server_recurrence" model="ir.actions.act_window">
            <field name="name">Configuration des récurrences d'abonnement de Serveur</field>
            <field name="res_model">solidserv.server.recurrence</field>
            <field name="view_mode">list</field>
            <field name="path">solidserv-recurrences</field>
        </record>


      <!-- VUE TYPE-->
      <record id="view_solidserv_server_type_list" model="ir.ui.view">
            <field name="name">solidserv.server.type.list</field>
            <field name="model">solidserv.server.type</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

      <!--ACTION TYPE-->
        <record id="action_solidserv_server_type" model="ir.actions.act_window">
            <field name="name">Configuration des types de serveurs</field>
            <field name="res_model">solidserv.server.type</field>
            <field name="view_mode">list</field>
            <field name="path">solidserv-types</field>
        </record>

      <!-- VUE DOMAIN-->
    <record id="view_solidserv_domain_list" model="ir.ui.view">
        <field name="name">solidserv.domain.list</field>
        <field name="model">solidserv.domain</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="main_id" widget="selection"/>

                <field name="content"/>

                <field name="hebergeur_id" widget="badge"/>

                <field name="client_ids" widget="many2many_tags"/>

                <field name="name" column_invisible="1"/>
                <button
                    name="action_open_domain"
                    type="object"
                    icon="fa-globe"
                    title="Voir le site"
                    invisible="not name"/>

            </list>
        </field>
    </record>

      <!-- FORM DOMAIN -->
    <record id="view_solidserv_domain_form" model="ir.ui.view">
            <field name="name">solidserv.domain.form</field>
            <field name="model">solidserv.domain</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Identité">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="main_id" widget="selection"/>
                                <field name="date_create"/>
                            </group>
                            <group string="Hébergement">
                                <field name="hebergeur_id" widget="selection"/>
                                <field name="price_purchase"/>
                                <field name="date_purchase"/>
                                <field name="recurrence_purchase"/>
                            </group>
                            <group string="Client">
                                <field name="client_ids" widget="many2many_tags" placeholder="Ajouter des clients..."/>
                                <field name="price_sale"/>
                                <field name="date_sale"/>
                                <field name="recurrence_sale"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="content_page">
                                <field name="content" placeholder="Écrivez votre description ici..."/>
                            </page>
                            <page string="Notes Internes" name="notes_page">
                                <field name="notes" widget="html" options="{'safe': True}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

      <!-- ACTION DOMAIN -->
        <record id='solidserv_domain_action' model='ir.actions.act_window'>
            <field name="name">Gestion des Domaines</field>
            <field name="res_model">solidserv.domain</field>
            <field name="view_mode">list,form</field>
            <field name="path">solidserv-domain</field>
        </record>



      <!-- VUE SERVER-->
    <record id="view_solidserv_server_list" model="ir.ui.view">
        <field name="name">solidserv.server.list</field>
        <field name="model">solidserv.server</field>
        <field name="arch" type="xml">
            <list>
                <field name="type_color" column_invisible="1"/>
                <field name="type_id" widget="badge" options="{'color_field': 'type_color'}"/>
                <field name="name"/>
                <field name="alias"/>

                <field name="content"/>

                <field name="domain_ids" widget="many2many_tags"/>

                <field name="status_color" column_invisible="1"/>
                <field name="status_id" widget="badge" options="{'color_field': 'status_color'}"/>
                <field name="ip_private"/>
                <field name="ip_public"/>
                <field name="proxy_id" widget="badge"/>

                <field name="hebergeur_id" widget="badge"/>
                <field name="location_country" column_invisible="1"/>
                <field name="location_id" widget="badge"/>
                <field name="baremetal_id" widget="badge"/>

                <field name="client_ids" widget="many2many_tags"/>

                <field name="monitoring" column_invisible="1"/>
                <button
                    name="action_open_monitoring"
                    type="object"
                    icon="fa-bar-chart"
                    title="Voir le monitoring"
                    invisible="not monitoring"/>

            </list>
        </field>
    </record>

      <!-- FORM SERVER -->
    <record id="view_solidserv_server_form" model="ir.ui.view">
            <field name="name">solidserv.server.form</field>
            <field name="model">solidserv.server</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Identité">
                                <field name="name"/>
                                <field name="alias"/>
                                <field name="type_id" widget="selection"/>
                                <field name="date_create"/>
                            </group>
                            <group string="Serveur">
                                <field name="status_id" widget="selection"/>
                                <field name="ip_public"/>
                                <field name="ip_private"/>
                                <field name="proxy_id" widget="selection"/>
                                <field name="domain_ids" widget="many2many_tags" placeholder="Ajouter des domaines..."/>
                                <field name="monitoring"/>
                            </group>
                            <group string="Technique">
                                <field name="os_id" widget="selection"/>
                                <field name="cpu"/>
                                <field name="ram"/>
                                <field name="rom"/>
                                <field name="tyro_uptime_state"/>
                                <field name="id_vm"/>
                            </group>
                            <group string="Hébergement">
                                <field name="hebergeur_id" widget="selection"/>
                                <field name="baremetal_id" widget="selection"/>
                                <field name="location_id" widget="selection"/>
                                <field name="price_purchase"/>
                                <field name="date_purchase"/>
                                <field name="recurrence_purchase"/>
                            </group>
                            <group string="Client">
                                <field name="client_ids" widget="many2many_tags" placeholder="Ajouter des clients..."/>
                                <field name="price_sale"/>
                                <field name="date_sale"/>
                                <field name="recurrence_sale"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="content_page">
                                <field name="content" placeholder="Écrivez votre description ici..."/>
                            </page>
                            <page string="Notes Internes" name="notes_page">
                                <field name="notes" widget="html" options="{'safe': True}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

      <!-- VUE GRAPHIQUE SERVER PAR LIEU -->
        <record id="view_solidserv_server_graph" model="ir.ui.view">
            <field name="name">solidserv.server.graph</field>
            <field name="model">solidserv.server</field>
            <field name="arch" type="xml">
                <graph string="Serveurs par lieu" type="bar">
                    <field name="location_id" type="row"/>
                    <field name="id" type="measure"/>
                </graph>
            </field>
        </record>

      <!-- ACTION SERVER -->
        <record id='solidserv_server_action' model='ir.actions.act_window'>
            <field name="name">Gestion des Serveurs</field>
            <field name="res_model">solidserv.server</field>
            <field name="view_mode">list,form,graph</field>
            <field name="path">solidserv</field>
        </record>


      <!-- SIDE BAR -->
    <menuitem name="SolidServ" id="solidserv_base_menu"
    web_icon="solidserv,static/description/icon.png"
    groups="solidserv.group_solidserv_admin"/>

      <!-- NAV BAR-->
    <menuitem name="Serveur" id="solidserv_server_menu"
        parent="solidserv_base_menu"
        action="solidserv_server_action"
        groups="solidserv.group_solidserv_admin"/>

      <menuitem name="Nom de domaine" id="solidserv_domain_menu"
        parent="solidserv_base_menu"
        action="solidserv_domain_action"
        groups="solidserv.group_solidserv_admin"/>

      <!-- NAV BAR > CONFIG -->
      <menuitem name="Configuration" id="solidserv_config_menu" parent="solidserv_base_menu" sequence="100" groups="solidserv.group_solidserv_admin"/>
        <menuitem name="Types des serveurs" id="solidserv_type_menu" parent="solidserv_config_menu" action="action_solidserv_server_type" groups="solidserv.group_solidserv_admin"/>
        <menuitem name="Lieux des serveurs" id="solidserv_location_menu" parent="solidserv_config_menu" action="action_solidserv_server_location" groups="solidserv.group_solidserv_admin"/>
        <menuitem name="OS des serveurs" id="solidserv_os_menu" parent="solidserv_config_menu" action="action_solidserv_server_os" groups="solidserv.group_solidserv_admin"/>
        <menuitem name="Statuts des serveurs" id="solidserv_status_menu" parent="solidserv_config_menu" action="action_solidserv_server_status" groups="solidserv.group_solidserv_admin"/>
        <menuitem name="Récurrence des serveurs" id="solidserv_recurrence_menu" parent="solidserv_config_menu" action="action_solidserv_server_recurrence" groups="solidserv.group_solidserv_admin"/>


  </data>
</odoo>
